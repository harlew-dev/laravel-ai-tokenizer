{
    "name": "harlew-dev/laravel-ai-tokenizer",
    "description": "Token estimation helpers for Laravel with AI SDK integration",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Harlew",
            "email": "harrison@harlew.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "yethee/tiktoken": "^1.0",
        "laravel/ai": "^0.1.3"
    },
    "require-dev": {
        "pestphp/pest": "^2.0|^3.0",
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "HarlewDev\\Tokenizer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HarlewDev\\Tokenizer\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "HarlewDev\\Tokenizer\\TokenizerServiceProvider"
            ],
            "aliases": {
                "Tokenizer": "HarlewDev\\Tokenizer\\Facades\\Tokenizer"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test:live": "vendor/bin/pest --group=live"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
